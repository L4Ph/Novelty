---
import { BookOpen, CloudOff, MousePointer2, Laptop } from '@lucide/astro';

const features = [
  {
    title: "究極の縦書き読書",
    description: "美しく読みやすいフォントとカスタマイズ可能な段組。紙の本のような没入感を提供します。",
    icon: BookOpen
  },
  {
    title: "オフライン対応",
    description: "一度読み込んだ小説は自動的にキャッシュ。電波のない場所でも物語の続きを楽しめます。",
    icon: CloudOff
  },
  {
    title: "快適な操作性",
    description: "直感的なジェスチャーと滑らかなアニメーション。長時間の読書でも手が疲れないよう設計されています。",
    icon: MousePointer2
  },
  {
    title: "マルチデバイス",
    description: "スマートフォン、タブレット、デスクトップ。あらゆるデバイスで最適化された体験を。",
    icon: Laptop
  }
];
---

<section id="features" class="section">
  <div class="container">
    <div class="header">
      <h2 class="sub-title">Core Features</h2>
      <p class="title">際立つ読書体験</p>
    </div>

    <div class="grid">
      {features.map(feature => (
        <div class="card group">
          <div class="card-body">
            <div class="icon-box">
              <feature.icon class="icon" />
            </div>
            <div class="content">
              <h3 class="card-title">
                {feature.title}
              </h3>
              <p class="card-description">
                {feature.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .section {
    padding: 6rem 0; /* py-24 */
    background-color: color-mix(in srgb, var(--color-base-200) 50%, transparent);
  }

  /* Header */
  .header {
    text-align: center;
    margin-bottom: 4rem; /* mb-16 */
  }

  .sub-title {
    font-size: 0.875rem; /* text-sm */
    font-weight: 700;
    color: var(--color-primary);
    letter-spacing: 0.1em; /* tracking-widest */
    text-transform: uppercase;
    margin-bottom: 0.75rem;
  }

  .title {
    font-size: 2.25rem; /* 4xl */
    font-weight: 900;
    letter-spacing: -0.05em; /* tight */
    margin: 0;
  }

  /* Grid */
  .grid {
    display: grid;
    gap: 2rem;
  }

  /* Card */
  .card {
    background-color: var(--color-base-100);
    border: 1px solid color-mix(in srgb, var(--color-base-content) 5%, transparent);
    border-radius: 1rem;
    box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05); /* shadow-sm */
    transition: all 0.5s;
  }

  .card:hover {
    box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1); /* shadow-xl */
    border-color: color-mix(in srgb, var(--color-primary) 20%, transparent);
    transform: translateY(-2px);
  }

  .card-body {
    padding: 2rem; /* p-8 */
    display: flex;
    flex-direction: column; /* Mobile first stack */
    gap: 1.5rem;
    align-items: flex-start;
  }

  /* Icon Box */
  .icon-box {
    width: 3.5rem; /* w-14 */
    height: 3.5rem;
    border-radius: 1rem; /* rounded-2xl */
    background-color: color-mix(in srgb, var(--color-primary) 10%, transparent);
    color: var(--color-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.3s;
  }

  .card:hover .icon-box {
    transform: scale(1.1);
    background-color: var(--color-primary);
    color: var(--color-primary-content);
  }

  .icon {
    width: 1.75rem; /* w-7 */
    height: 1.75rem;
  }

  /* Content */
  .card-title {
    font-size: 1.5rem; /* 2xl */
    font-weight: 900;
    margin-bottom: 0.75rem;
    transition: color 0.2s;
  }

  .card:hover .card-title {
    color: var(--color-primary);
  }

  .card-description {
    color: color-mix(in srgb, var(--color-base-content) 60%, transparent);
    line-height: 1.625;
    font-weight: 500;
  }

  /* Responsive */
  @media (min-width: 768px) { /* md */
    .grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) { /* lg */
    .section {
      padding: 8rem 0; /* py-32 */
    }
    .header {
      margin-bottom: 6rem; /* mb-24 */
    }
    .title {
      font-size: 3rem; /* 5xl */
    }
    .card-body {
      padding: 2.5rem; /* p-10 */
      flex-direction: row;
    }
  }
</style>
