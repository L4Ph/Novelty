---
import "../styles/global.css";

interface Props {
	title?: string;
	description?: string;
	image?: string;
	type?: string;
}

const { 
	title = "Novelty - Modern Novel Reader",
	description = "モダンで、シンプルに。そして透明性高く。「小説家になろう」の読書体験を再定義する、Flutter製クロスプラットフォーム小説ビューアー。",
	image = "/favicon.svg",
	type = "website"
} = Astro.props;
---

<!doctype html>
<html lang="ja" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="keywords" content="小説家になろう, なろう, 読書アプリ, 小説ビューアー, ライトノベル, ラノベ, Flutter, オープンソース, Novelty" />
		<link rel="canonical" href="https://novelty.l4ph.moe" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={type} />
		<meta property="og:url" content="https://novelty.l4ph.moe" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.url)} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:site" content="@R0u9h" />
		<meta property="twitter:creator" content="@R0u9h" />
		<meta property="twitter:url" content="https://novelty.l4ph.moe" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.url)} />

		<!-- Structured Data (JSON-LD) -->
		<script type="application/ld+json">
			[
				{
					"@context": "https://schema.org",
					"@type": "WebSite",
					"name": "Novelty",
					"url": "https://novelty.l4ph.moe",
					"description": "モダンでシンプルな「小説家になろう」ビューアー",
					"publisher": {
						"@type": "Organization",
						"name": "Novelty Project",
						"logo": {
							"@type": "ImageObject",
							"url": "https://novelty.l4ph.moe/favicon.svg"
						}
					}
				},
				{
					"@context": "https://schema.org",
					"@type": "SoftwareApplication",
					"name": "Novelty",
					"operatingSystem": "iOS, Android, Windows, macOS, Linux",
					"applicationCategory": "ReadingApplication",
					"description": "「小説家になろう」を快適に読むための、モダンでシンプルな小説ビューアー。広告なし、オフライン対応、縦書き表示など多彩な機能を搭載。",
					"offers": {
						"@type": "Offer",
						"price": "0",
						"priceCurrency": "JPY"
					},
					"author": {
						"@type": "Organization",
						"name": "Novelty Project",
						"url": "https://github.com/L4Ph/Novelty"
					},
					"screenshot": "https://novelty.l4ph.moe/hero.png",
					"featureList": "縦書き表示, オフライン読書, 広告ブロック, クロスプラットフォーム, ダークモード"
				}
			]
		</script>

	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
  ::selection {
    background-color: color-mix(in srgb, var(--color-primary) 30%, transparent);
  }
</style>
