---
import "../styles/app.css";

interface Props {
	title?: string;
	description?: string;
	image?: string;
	type?: string;
}

const { 
	title = "Novelty - Modern Novel Reader",
	description = "モダンで、シンプルに。そして透明性高く。「小説家になろう」の読書体験を再定義する、Flutter製クロスプラットフォーム小説ビューアー。",
	image = "/favicon.svg",
	type = "website"
} = Astro.props;
---

<!doctype html>
<html lang="ja" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="keywords" content="小説家になろう, なろう, 読書アプリ, 小説ビューアー, ライトノベル, ラノベ, Flutter, オープンソース, Novelty" />
		<link rel="canonical" href="https://novelty.l4ph.moe" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={type} />
		<meta property="og:url" content="https://novelty.l4ph.moe" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.url)} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://novelty.l4ph.moe" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.url)} />

		<!-- Structured Data (JSON-LD) -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "SoftwareApplication",
				"name": "Novelty",
				"operatingSystem": "iOS, Android, Windows, macOS, Linux",
				"applicationCategory": "ReadingApplication",
				"description": "「小説家になろう」を快適に読むための、モダンでシンプルな小説ビューアー。",
				"offers": {
					"@type": "Offer",
					"price": "0",
					"priceCurrency": "JPY"
				},
				"author": {
					"@type": "Organization",
					"name": "Novelty Project"
				}
			}
		</script>

	</head>
	<body class="min-h-screen bg-base-100 text-base-content selection:bg-primary/30">
		<slot />
	</body>
</html>